<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="lt.vu.mybatis.model.Item" alias="Item"/>
        <typeAlias type="lt.vu.mybatis.model.ItemPhoto" alias="ItemPhoto"/>
        <typeAlias type="lt.vu.mybatis.model.Basket" alias="Basket"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="ItemsDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml/BasketMapper.xml"/>
        <mapper resource="mybatis.xml/ItemMapper.xml"/>
        <mapper resource="mybatis.xml/ItemPhotoMapper.xml"/>
    </mappers>
</configuration>
